{
  "name": "webpack-node-typescript-boilerplate",
  "version": "0.0.0",
  "description": "Starting point for a vanilla TypeScript app running on a Node.js server",
  "repository": "https://github.com/saltire/webpack-node-typescript-boilerplate",
  "license": "ISC",
  "engines": {
    "node": "18"
  },
  "main": "server/index.ts",
  "scripts": {
    "start": "node built/index.js",
    "watch": "nodemon --watch server -e ts -x \"ts-node -r dotenv/config -P server/tsconfig.json server/index.ts\"",
    "build:server": "tsc -p server",
    "build:client": "webpack --config server/webpack/webpack.prod.ts",
    "build": "npm run build:server && npm run build:client",
    "check:server": "tsc -p server --noEmit",
    "check:client": "tsc -p client --noEmit",
    "check": "npm run check:server && npm run check:client",
    "stylelint": "stylelint .",
    "eslint": "eslint .",
    "eslint:server": "eslint ./server",
    "eslint:client": "eslint ./client",
    "lint": "npm run eslint && npm run stylelint"
  },
  "dependencies": {
    "axios": "^1.2.0",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.7.2",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.7.0",
    "morgan": "^1.10.0",
    "sass-loader": "^13.2.0",
    "terser-webpack-plugin": "^5.3.6",
    "webpack": "^5.75.0",
    "webpack-dev-middleware": "^6.0.0",
    "webpack-hot-middleware": "^2.25.3",
    "webpack-merge": "^5.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/express": "^4.17.14",
    "@types/morgan": "^1.9.3",
    "@types/webpack-hot-middleware": "^2.25.6",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.28.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "nodemon": "^2.0.20",
    "sass": "^1.56.1",
    "stylelint": "^14.15.0",
    "stylelint-config-property-sort-order-smacss": "^9.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-scss": "^4.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "webpack-cli": "^5.0.0"
  }
}
